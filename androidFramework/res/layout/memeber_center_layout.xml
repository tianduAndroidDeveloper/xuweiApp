<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xuwei="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:scrollbars="none" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dip"
	    android:background="@android:color/white">
	    <com.makeramen.RoundedImageView 
	        android:id="@+id/member_photo"
	        android:layout_width="70dip"
	        android:layout_height="70dip"
	        android:scaleType="centerCrop"
	        android:src="@drawable/massage"
	        xuwei:corner_radius="35dip"
	        android:layout_centerVertical="true"
	        />
	    <LinearLayout 
	        android:layout_marginLeft="10dip"
	        android:layout_toRightOf="@id/member_photo"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="张小凡"/>
	        <TextView 
	            android:layout_marginLeft="10dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/red_solid_corner"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:paddingTop="5dip"
	            android:paddingBottom="5dip"
	            android:textColor="@android:color/white"
	            android:text="普通会员"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_marginTop="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="积分："/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="150"
	            android:textColor="@color/member_red_3"/>
	         <TextView 
	             android:layout_marginLeft="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="红包："/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="25"
	            android:textColor="@color/member_red_3"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="个"/>
	        </LinearLayout>
	        <TextView 
	             android:layout_marginTop="10dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/blue_solid_corner"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:paddingTop="5dip"
	            android:paddingBottom="5dip"
	            android:textColor="@android:color/white"
	            android:text="签到"/>
	    </LinearLayout>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@android:color/white"
	    android:orientation="horizontal"
	    android:gravity="center"
	    
	    >
	    <LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="@drawable/member_repeat_bg">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="0"/>
	        <TextView 
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="待付款"/>
	    </LinearLayout>
	     <LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="@drawable/member_repeat_bg">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="0"/>
	        <TextView 
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="待收货"/>
	    </LinearLayout>
	     <LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="@drawable/member_repeat_bg">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="0"/>
	        <TextView 
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="待评价"/>
	    </LinearLayout>
	     <LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="@drawable/member_repeat_bg">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="0"/>
	        <TextView 
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="全部订单"/>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dip"
	    android:background="@android:color/white">
	    <TextView 
	        android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="我的订单"
	            android:gravity="center"/>
	     <TextView 
	        android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="我的秒杀"
	            android:gravity="center"/>
	      <TextView 
	        android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="积分订单"
	            android:gravity="center"/>
	       <TextView 
	        android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="历史记录"
	            android:gravity="center"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_marginTop="10dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dip"
	    android:background="@android:color/white">
	    <TextView 
	        android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="我的账户"
	            android:gravity="center_vertical|left"
	            android:textSize="20sp"/>
	     <TextView 
	         android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:paddingTop="5dip"
	            android:paddingBottom="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:text="积分兑换"
	            android:gravity="center_vertical|right"
	            android:background="@drawable/red_solid_corner"/>
	      
	</LinearLayout>
	<LinearLayout 
	    android:layout_marginTop="1dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	   android:background="@android:color/white"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:padding="10dip"
	    >
	    
	     <LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/member_red_2"
	            android:text="0"/>
	        <TextView 
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="我的积分"/>
	    </LinearLayout>
	     <LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/member_red_2"
	            android:text="0"/>
	        <TextView 
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="我的礼券"/>
	    </LinearLayout>
	     <LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/member_red_2"
	            android:text="0"/>
	        <TextView 
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="我的收藏"/>
	    </LinearLayout>
	</LinearLayout>
	 <LinearLayout 
	     android:layout_marginTop="10dip"
	     android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:color/white"
	        
	        >
	        <TextView 
	            android:padding="10dip"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray"
	            android:textSize="16sp"
	            android:text="收货地址"/>
	        <TextView 
	            android:layout_width="1dip"
	            android:layout_height="fill_parent"
	            android:background="@android:color/darker_gray"
	            android:layout_margin="5dp"/>
	        <TextView 
	            android:padding="10dip"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray"
	            android:textSize="16sp"
	            android:text="评价晒单"/>
	    </LinearLayout>
	     <LinearLayout android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="1dip"
	        android:background="@android:color/white"
	        >
	        <TextView 
	            android:padding="10dip"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray"
	            android:text="我的维修"
	            android:textSize="16sp"/>
	        <TextView 
	            android:layout_width="1dip"
	            android:layout_height="fill_parent"
	            android:background="@android:color/darker_gray"
	            android:layout_margin="5dp"/>
	        <TextView 
	            android:padding="10dip"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray"
	            android:text="退换查询"
	            android:textSize="16sp"/>
	    </LinearLayout>
	     <LinearLayout android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="1dip"
	        android:background="@android:color/white"
	        >
	        <TextView 
	            android:padding="10dip"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray"
	            android:text="我的咨询"
	            android:textSize="16sp"/>
	        <TextView 
	            android:layout_width="1dip"
	            android:layout_height="fill_parent"
	            android:background="@android:color/darker_gray"
	            android:layout_margin="5dp"/>
	        <TextView 
	            android:padding="10dip"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray"
	            android:text="我的投诉"
	            android:textSize="16sp"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_margin="10dip"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/red_solid_corner">
	     <Button 
	         android:gravity="center"
	         android:layout_gravity="center"
	         android:drawableLeft="@drawable/distribution"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="分销中心"
	         android:background="@null"
	         android:textColor="@android:color/white"
	         android:drawablePadding="5dip"/>
	     </LinearLayout>
</LinearLayout>
</ScrollView>
