            android:theme="@style/Theme_Activity_Animation" />
        <activity
            android:name="com.android.androidframework.ui.commodity.ConditionDialog_"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.android.androidframework.ui.member.LoginActivity_"
